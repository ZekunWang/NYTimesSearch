<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/ll_without_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rv_item_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gv_item_text_padding"
        android:id="@+id/tvTitle"
        android:textSize="@dimen/gv_item_text_title"
        android:textColor="@color/spn_text"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="Title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gv_item_text_padding"
        android:id="@+id/tvContent"
        android:textSize="@dimen/gv_item_text_content"
        android:textColor="@color/spn_text"
        android:maxLines="5"
        android:ellipsize="end"
        tools:text="Title"/>
</LinearLayout>