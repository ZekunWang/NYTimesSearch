<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/item_view_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/ivImage"
        tools:src="@mipmap/ic_launcher"
        android:scaleType="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivImage"
        android:layout_alignLeft="@id/ivImage"
        android:layout_alignRight="@id/ivImage"
        android:paddingLeft="@dimen/gv_item_text_padding"
        android:paddingRight="@dimen/gv_item_text_padding"
        android:paddingBottom="@dimen/gv_item_text_padding"
        android:id="@+id/tvTitle"
        android:textSize="@dimen/gv_item_text"
        android:textColor="@color/spn_text"
        android:minLines="3"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="Title"/>
</RelativeLayout>